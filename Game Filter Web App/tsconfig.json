{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules", "src/*"]
    },
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "rootDir": "src",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.spec.tsx"]
}